format-full-foreground = ${colors.fg}
format-full-background = ${colors.bg}

label-charging = "%percentage%%"
label-discharging = "%percentage%%"
label-discharging-foreground = ${colors.fg}
label-full = "ÔâÄ %percentage%%"

ramp-capacity-0 = ÔâÑ
