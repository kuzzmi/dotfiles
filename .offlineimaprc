remotepasseval = get_password("kuzzmi.com")
realdelete = no
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
folderfilter = lambda folder: folder not in ['Trash',
                                             'Templates',
                                             'Spam',
                                             ]

