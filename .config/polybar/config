;----------------------------------------------------------
;          W I R E L E S S    N E T W O R K
;----------------------------------------------------------

[module/network]
type = internal/network
; To test interface: $ ls -1 /sys/class/net/
interface = wlp2s0
interval = 1

format-connected = <label-connected>
format-disconnected = <label-disconnected>
;format-connected-prefix = " "
;format-connected-prefix = " net"
format-connected-foreground = ${colors.lime}
format-disconnected-prefix = " "
format-disconnected-foreground = ${colors.alert}

label-connected = " "
; label-connected = %local_ip%
label-connected-foreground = ${colors.lime}
label-disconnected = not connected
label-disconnected-foreground = ${colors.alert}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

click-left = termite -e "nmtui" -t "nmtui"

;----------------------------------------------------------
;               V P N
;----------------------------------------------------------

[module/vpn]
type = internal/network
interface = tun0
interval = 1

format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = ""
label-disconnected = " "
format-connected-foreground = ${colors.lime}
format-disconnected-foreground = #F00

;----------------------------------------------------------
;                 E T H E R N E T
;----------------------------------------------------------

[module/eth]
type = internal/network
interface = enp14s0u1u2
interval = 1.0

format-connected-prefix = " "
format-connected-foreground = ${colors.lime}
format-disconnected-foreground = #F00

label-connected = %local_ip%


