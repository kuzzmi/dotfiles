format-disconnected = <label-disconnected>
label-connected = "ÔÉÅ"
label-disconnected = "ÔÑß "
format-connected-foreground = ${colors.lime}
format-disconnected-foreground = ${colors.alert}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Ethernet

[module/eth]
