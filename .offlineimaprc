[general]
ui = ttyui
accounts = kuzzmi@gmail.com,igor@kuzzmi.com,igor@cureous.life
pythonfile = ~/.offlineimap/offlineimap.py
fsync = False

[Account kuzzmi@gmail.com]
localrepository = kuzzmi@gmail.com-local
remoterepository = kuzzmi@gmail.com-remote
postsynchook = ~/.offlineimap/postsynchook.sh

[Repository kuzzmi@gmail.com-local]
type = Maildir
localfolders = ~/.mail/kuzzmi@gmail.com

[Repository kuzzmi@gmail.com-remote]
maxconnections = 5
auth_mechanisms = LOGIN
type = Gmail
remoteusereval = get_username("kuzzmi-gmail")
remotepasseval = get_password("kuzzmi-gmail")
realdelete = no
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

folderfilter = lambda folder: folder not in ['[Gmail]/Trash',
                                             '[Gmail]/Notes',
                                             '[Gmail]/Junk',
                                             '[Gmail]/Important',
                                             '[Gmail]/Spam',
                                             ]

