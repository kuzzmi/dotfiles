;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Email

[module/email-gmail]
type = custom/script
exec = echo @gmail
exec-if = ~/.local/bin/polybar/email.sh kuzzmi-gmail
interval = 1
format-underline = #268bd2
format-prefix = "ÔÉ† "
format-foreground = ${colors.lime}
click-left = ~/.local/bin/open-mutt

[module/email-kuzzmi]
type = custom/script
exec = echo @kuzzmi
exec-if = ~/.local/bin/polybar/email.sh igor@kuzzmi.com
interval = 1
format-underline = #268bd2
format-prefix = "ÔÉ† "
format-foreground = ${colors.lime}
click-left = ~/.local/bin/open-mutt

[module/email-cureous]
