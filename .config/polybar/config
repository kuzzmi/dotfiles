format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.fg}
format-charging-background = ${colors.bg}
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-foreground = ${colors.fg}
format-discharging-background = ${colors.bg}
format-full = <label-full>
format-full-foreground = ${colors.fg}
format-full-background = ${colors.bg}

label-charging = "%percentage%%"
label-discharging = "%percentage%%"
label-discharging-foreground = ${colors.fg}
label-full = " %percentage%%"

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.peach}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750


[module/wattage]
type = custom/script
interval = 1
format-prefix = " "
format = "<label>"
tail = true
exec = ~/.local/bin/get_watts

;----------------------------------------------------------
;                    E M A I L
;----------------------------------------------------------
[module/email-gmail]
type = custom/script
exec = echo @gmail
exec-if = ~/.local/bin/polybar/email.sh kuzzmi-gmail
interval = 1
format-underline = #268bd2
format-prefix = " "
format-foreground = ${colors.lime}
click-left = ~/.local/bin/open-mutt

[module/email-kuzzmi]
type = custom/script
exec = echo @kuzzmi
exec-if = ~/.local/bin/polybar/email.sh igor@kuzzmi.com
interval = 1
format-underline = #268bd2
format-prefix = " "
format-foreground = ${colors.lime}
click-left = ~/.local/bin/open-mutt

[module/email-cureous]
