; bspwm text xwindow tray xkeyboard filesystem mpd backlight cpu memory network
; bitcoin siacoin bytecoin eth date volume battery temperature powermenu quickmenu

; ------------------------------ I3 ------------------------------
[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
pin-workspaces = true

; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = true

; Set the scroll cycle direction
; Default: true
reverse-scroll = false

;format-suffix = |
;   ● ○
label-focused = " %name% "
; label-focused = 
label-focused-foreground = ${colors.bg}
label-focused-background = ${colors.fg}
; label-focused-padding = 2
; label-focused-font = 3
; label-unfocused = 
label-unfocused = " %name% "
label-unfocused-foreground = ${colors.fg}
label-unfocused-background = ${colors.bg}
; label-unfocused-padding = 2
; label-unfocused-font = 3
; label-urgent = 
label-urgent = " %name% "
label-urgent-foreground = ${colors.alert}
label-urgent-background = ${colors.xcolor1}
; label-urgent-padding = 2
; label-urgent-font = 3
; label-visible = 
label-visible = " %name% "
label-visible-foreground = ${colors.fg}
label-visible-background = ${colors.bg}
; label-visible-padding = 2
; label-visible-font = 3


;----------------------------------------------------------
;               X W I N D O W
