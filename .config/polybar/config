format-prefix = " "
;  
format-foreground = ${colors.fg}
format-background = ${colors.bg}

label-layout = %layout%
label-indicator-padding = 2
label-indicator-background = ${colors.salmon}


;----------------------------------------------------------
;           F I L E S Y S T E M
;----------------------------------------------------------

[module/filesystem-root]
type = internal/fs
interval = 25
fixed-values = true

mount-0 = /
;mount-1 = /home

format-mounted = <label-mounted>
format-mounted-prefix = " "
;format-mounted-prefix = hdd
format-mounted-foreground = ${colors.fg}
format-mounted-background = ${colors.bg}

label-mounted = %percentage_used%%
label-mounted-foreground = ${colors.fg}
label-mounted-background = ${colors.bg}
label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = ${colors.alert}
label-unmounted-background = ${colors.bg}

[module/filesystem-home]
type = internal/fs
interval = 25
fixed-values = true

mount-0 = /home

format-mounted = <label-mounted>
format-mounted-prefix = " "
;format-mounted-prefix = hdd
format-mounted-foreground = ${colors.fg}
format-mounted-background = ${colors.bg}

label-mounted = %percentage_used%%
label-mounted-foreground = ${colors.fg}
label-mounted-background = ${colors.bg}
label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = ${colors.alert}
label-unmounted-background = ${colors.bg}

