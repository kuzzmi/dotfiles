defaults
logfile ~/.local/var/log/msmtp.log

account kuzzmi@gmail.com
protocol smtp
host smtp.gmail.com
tls on
auth on
port 587
from kuzzmi@gmail.com
user kuzzmi@gmail.com
passwordeval "gpg -q --for-your-eyes-only --no-tty -d ~/.config/dotfiles/.mailpass.gmail.gpg"
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account igor@kuzzmi.com
protocol smtp
host smtp.zoho.com
port 587
tls_starttls off
from igor@kuzzmi.com
user igor@kuzzmi.com
passwordeval "gpg -q --for-your-eyes-only --no-tty -d ~/.config/dotfiles/.mailpass.zoho.gpg"
auth on
tls on
tls_starttls on
tls_certcheck off

account default : kuzzmi@gmail.com
